# DigitalOcean Production Environment Variables
# Copy this file to .env for local testing or use in App Platform environment settings

# API Configuration
HOST=0.0.0.0
PORT=8080

# OCR Tools (standard Ubuntu paths)
TESSERACT_CMD=/usr/bin/tesseract
POPPLER_PATH=/usr/bin

# Directory Configuration (use absolute paths in production)
SCAN_DIR=/app/incoming-scan
FULLY_INDEXED_DIR=/app/fully_indexed
PARTIAL_INDEXED_DIR=/app/partially_indexed
FAILED_DIR=/app/failed
DEBUG_DIR=/app/debug
LOG_DIR=/app/logs

# OCR Processing Settings
OCR_DPI=600
MAX_RETRIES=3
RETRY_DELAY=1.0
BATCH_DELAY=0.5
PROCESS_DELAY=5

# Logging
LOG_LEVEL=INFO

# Database Configuration (optional - uncomment if using database)
# DB_HOST=your-db-host.digitalocean.com
# DB_PORT=25060
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
# DB_NAME=your-db-name
# DB_SSL_MODE=require

# Security (set these in production)
# API_SECRET_KEY=your-secret-key-here
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Performance Tuning
WORKERS=1
MAX_UPLOAD_SIZE=50MB
TIMEOUT=300
